<html>
    <body>
    <div class="center jumbotron">
      <%= form_tag(student_answers_path, method: 'post') do %>
        <% @questions.shuffle.each do |question| %>
          <div class = "question"><%= question.text %></div>
          <% question.answers.shuffle.each do |answer| %>
            <% if answer.text != '' %>
              <input type="radio" name="<%= question.id %>" value="<%= answer.id %>" checked> <%= answer.text %><br>
            <% end %>
          <% end %>
          <br>
        <% end %><br>
        <%= submit_tag 'Submit' %>
      <% end %>
    </div>
  </body>
</html>
